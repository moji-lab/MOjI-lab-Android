            android:icon="@drawable/moji_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/moji_logo"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ui.main.upload.AddActivity">
        </activity>
        <activity android:name=".ui.main.upload.UploadActivity">
        </activity>
