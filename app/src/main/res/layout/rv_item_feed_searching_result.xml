<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_image_directory_searching"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="157dp"
    android:layout_height="219dp"
    android:background="@drawable/search_feed_border">
<ImageView
    android:layout_marginTop="1dp"
    android:layout_marginHorizontal="1dp"
    android:id="@+id/iv_rv_search_img"
    android:layout_width="157dp"
    android:layout_height="157dp"
    android:scaleType="centerCrop"/>
    <TextView
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/iv_rv_search_img"
        android:id="@+id/tv_rv_search_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000000"
        android:text="건대"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_rv_search_img"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/tv_rv_search_place"
        android:src="@drawable/profile_iu"
        android:layout_width="22dp"
        android:layout_height="22dp"/>
    <TextView
        android:id="@+id/tv_rv_search_name"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tv_rv_search_place"
        android:layout_toRightOf="@+id/cv_rv_search_img"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#444444"
        android:gravity="center_horizontal"
        android:text="닉네임"
        />
    <ImageView
        android:layout_toLeftOf="@+id/tv_rv_item_search_like_cnt"
        android:id="@+id/iv_rv_item_search_like_icon"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/iv_rv_search_img"
        android:layout_marginRight="3dp"
        android:src="@drawable/favorite_selector"
        android:layout_width="15dp"
        android:layout_height="13dp"/>
    <TextView
        android:text="1"
        android:id="@+id/tv_rv_item_search_like_cnt"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textStyle="normal"
        android:textColor="@color/pinkish_grey"
        android:includeFontPadding="false"
        android:layout_below="@+id/iv_rv_search_img"
        android:layout_marginRight="17dp"
        android:layout_width="wrap_content"
        android:layout_height="14dp"/>
</RelativeLayout>