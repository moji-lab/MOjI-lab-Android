<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_order_item_container"
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="79dp"
    android:layout_marginBottom="14dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@drawable/item_background"
                    android:paddingStart="16dp">

        <RelativeLayout
            android:id="@+id/rl_order_item_rank"
            android:layout_width="36dp"
            android:layout_height="36dp" android:layout_centerVertical="true"
            android:background="@drawable/switch_thumb_on">
            <TextView
                android:id="@+id/tv_order_item_order"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp" android:layout_toRightOf="@+id/rl_order_item_rank"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_order_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:text="잠실 롯데타워"
                android:textColor="#444444"
                android:textSize="16sp"
            />

            <TextView
                android:id="@+id/tv_order_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="2018년 8월 9일 "
                android:textColor="#9b9b9b"
                android:textSize="13sp"
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/ib_order_item_drag_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:padding="24dp"
            android:src="@drawable/position_drag"/>

    </RelativeLayout>

</RelativeLayout>