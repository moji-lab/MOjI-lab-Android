<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.upload.addCourse.map.coarsename.CoarseNameRegisterActivity">

    <RelativeLayout
        android:id="@+id/rl_top_name_register"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageButton
            android:id="@+id/btn_back_name_register"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/btn_back"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_title_name_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="직접 등록하기"
            />

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_top_name_register"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        android:id="@+id/view_top_name_register"
        />

    <Button
        android:id="@+id/btn_back_map_name_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="위치 보러가기"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_back_map_btn"
        android:layout_below="@+id/view_top_name_register"
        />

    <View
        android:id="@+id/view_middle_name_register"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f8f8f8"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_back_map_name_register"
        />

    <TextView
        android:id="@+id/tv_coarse_name_name_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소명"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:textColor="#444444"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/view_middle_name_register"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_register_coarse_name"
        android:layout_below="@+id/tv_coarse_name_name_register"
        >
        <EditText
            android:id="@+id/edit_coarse_name_name_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:background="@null"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_name_register"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginHorizontal="41dp"
        android:text="완료"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:background="@drawable/confirm_focus_on_circle_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        />

</RelativeLayout>