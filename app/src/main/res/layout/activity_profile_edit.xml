<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.mypage.profilemodify.ProfileEditActivity"
    android:background="#ffffff
    ">

    <RelativeLayout
        android:id="@+id/rl_top_profile_edit"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageButton
            android:id="@+id/btn_back_profile_edit"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/btn_back"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_title_profile_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="프로필 수정"
            />

        <TextView
            android:id="@+id/tv_confirm_profile_edit"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/pinkish_grey"
            android:layout_marginEnd="24.5dp"
            android:text="완료"
            />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_top_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        />


    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        >
<LinearLayout
    android:layerType="software"
    android:id="@+id/rl_edit_circle"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile_profile_edit"
            android:layout_width="96dp"
            android:layout_height="96dp"

            />
</LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_default_proflle_img_profile_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_default_background"
            >

            <TextView
                android:id="@+id/tv_profile_name_profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉넴"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <ImageButton
            android:visibility="visible"
            android:elevation="1dp"
            android:id="@+id/btn_edit_profile_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>