<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.mypage.profileedit.ProfileEditActivity"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_top_notice"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageButton
            android:id="@+id/btn_back_notice"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/btn_back"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_title_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="알림"
            />

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_top_notice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_notice_content_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>