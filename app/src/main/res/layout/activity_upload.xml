<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.upload.UploadActivity">

    <RelativeLayout
            android:id="@+id/rl_upload_act_toolbar"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent" android:layout_height="54dp">
        <ImageView
                android:id="@+id/iv_upload_act_close_btn"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/btn_cancel"
                android:padding="8dp"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_centerInParent="true"
                android:fontFamily="@font/NotoSansCJKkr-Regular"
                android:includeFontPadding="false" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="기록하기"
        />

        <TextView
                android:id="@+id/tv_upload_act_complete_btn"
                android:padding="8dp"
                android:fontFamily="@font/NotoSansCJKkr-Regular"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/pinkish_grey"
                android:gravity="center_horizontal"
                android:text="완료"
        />
    </RelativeLayout>
    <View
            android:layout_below="@+id/rl_upload_act_toolbar"
            android:layout_width="match_parent" android:layout_height="3dp"
            android:background="#e4e4e4"/>

    <LinearLayout
            android:id="@+id/ll_upload_act_open"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/rl_upload_act_toolbar"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/NotoSansCJKkr-Regular"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#171717"
                android:gravity="center_horizontal"
                android:text="게시물 비공개"
        />
        <Switch
                android:id="@+id/switch_upload_act_open"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_marginHorizontal="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_upload_act_open"
            android:layout_width="340dp" android:layout_height="wrap_content">
        <EditText
                android:id="@+id/et_upload_act_write_location"
                android:fontFamily="@font/NotoSansCJKkr-Medium"
                android:includeFontPadding="false"
                android:layout_width="match_parent" android:layout_height="45dp"
                android:textSize="16sp"
                android:textColorHint="@color/pinkish_grey"
                android:gravity="center"
                android:hint="여행을 다녀온 지역을 적어주세요"
                android:background="@drawable/location_background"
        />
        <ImageView
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/write_location"/>
    </RelativeLayout>


    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent" android:layout_height="90dp">


        <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:layout_width="match_parent" android:layout_height="3dp"
                  android:background="#e4e4e4"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="match_parent">

                <RelativeLayout
                        android:id="@+id/rl_upload_act_change_course_btn"
                        android:layout_marginEnd="40dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:src="@drawable/positionchange"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                android:textColor="#9b9b9b"
                                android:fontFamily="@font/NotoSansCJKkr-Medium"
                                android:includeFontPadding="false"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="순서변경"/>
                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/rl_upload_act_tag_btn"
                        android:layout_marginStart="40dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:src="@drawable/btn_tag"/>
                        <TextView
                                android:layout_marginTop="2dp"
                                android:textColor="#9b9b9b"
                                android:fontFamily="@font/NotoSansCJKkr-Medium"
                                android:includeFontPadding="false"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="친구태그"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_upload_act_add_course_btn"
                android:paddingHorizontal="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/iv_upload_act_upload_img"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/add_btn"/>

            <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_upload_act_upload_text"
                    android:layout_below="@+id/iv_upload_act_upload_img"
                    android:text="코스추가"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/NotoSansCJKkr-Medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/mainYellow"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>