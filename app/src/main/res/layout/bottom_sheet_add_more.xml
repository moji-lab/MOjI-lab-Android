<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/iv_review_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/review"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_review_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:layout_toRightOf="@+id/iv_review_add_more"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textColor="#202020"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/iv_delete_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_delete_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제하기"
            android:layout_toRightOf="@+id/iv_delete_add_more"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textColor="#202020"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            />

    </RelativeLayout>

</LinearLayout>