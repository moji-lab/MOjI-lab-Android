<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_detail_toolbar"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="69dp">
        <RelativeLayout
            android:layout_marginLeft="22dp"
            android:layout_marginTop="16dp"
            android:id="@+id/tv_item_detail_number"
            android:layout_width="36dp"
            android:layout_height="36dp" android:layout_centerVertical="true"
            android:background="@drawable/bluecircle">
            <TextView
                android:id="@+id/tv_item_detail_real_number"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_detail_place"
            android:layout_toRightOf="@+id/tv_item_detail_number"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#444444"
            android:text="대림창고"
            />
        <TextView
            android:layout_below="@+id/tv_item_detail_place"
            android:id="@+id/tv_item_detail_feed_visit_text"
            android:layout_toRightOf="@+id/tv_item_detail_number"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#444444"
            android:text="방문일"
            />
        <TextView
            android:layout_below="@+id/tv_item_detail_place"
            android:id="@+id/tv_item_detail_feed_visit_days"
            android:layout_toRightOf="@+id/tv_item_detail_feed_visit_text"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9b9b9b"
            android:letterSpacing="0.01"
            android:text="2018년 9월 6일"
            />

    </RelativeLayout>
    <com.github.islamkhsh.CardSliderViewPager
        android:layout_below="@+id/rl_detail_toolbar"
        android:id="@+id/vp_item_viewpager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:cardSlider_indicator="@id/tl_item_detail_indicator"
        android:layout_height="360dp"/>

    <com.github.islamkhsh.CardSliderIndicator
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        app:indicatorsToShow="4"
        app:piv_animationType="scale"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@color/greyblue"
        app:piv_unselectedColor="@color/pinkish_grey"
        app:piv_viewPager="@id/vp_item_viewpager"
        attrs:piv_padding="4dp"
        attrs:piv_radius="8dp"
        android:layout_below="@+id/vp_item_viewpager"
        android:id="@+id/tl_item_detail_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        />

    <ImageButton
        android:id="@+id/ib_itemt_detail_favorite"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/vp_item_viewpager"
        android:layout_marginTop="35dp"
        android:background="@drawable/favorite_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>
    <ImageButton
        android:layout_toRightOf="@+id/ib_itemt_detail_favorite"
        android:id="@+id/ib_itemt_detail_comment"
        android:padding="8dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/vp_item_viewpager"
        android:layout_marginTop="35dp"
        android:background="@drawable/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_item_detail_contente"
        android:layout_marginRight="37dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/ib_itemt_detail_favorite"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text=""
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_detail_hashtag"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/tv_item_detail_contente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        />
    <ImageView

        android:id="@+id/iv_item_detail_smallheart"
        android:layout_marginBottom="14dp"
        android:src="@drawable/feed_like_icon"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/rv_item_detail_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_item_detail_smallheart_number"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/iv_item_detail_smallheart"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:textSize="11sp"
        android:textColor="@color/pinkish_grey"
        android:letterSpacing="0.01"
        android:text="10"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_below="@+id/rv_item_detail_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_item_detail_smallcomment"
        android:layout_toRightOf="@+id/tv_item_detail_smallheart_number"
        android:layout_marginBottom="14dp"
        android:src="@drawable/feed_comment_icon"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/rv_item_detail_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_item_detail_smallcomment_number"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/iv_item_detail_smallcomment"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:textSize="11sp"
        android:textColor="@color/pinkish_grey"
        android:letterSpacing="0.01"
        android:text="4"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_below="@+id/rv_item_detail_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>