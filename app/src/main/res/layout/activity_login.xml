<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.jem.moji.viewmodel.LoginViewModel" />
    </data>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#ffffff"
                  tools:context=".ui.login.LoginActivity"
                  android:orientation="vertical"
    >

        <ImageView
                android:id="@+id/login_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="196dp"
                android:src="@drawable/moji_logo"
                android:layout_gravity="center_horizontal"
        />

        <LinearLayout
                android:id="@+id/login_email_ll"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:layout_marginTop="233.6dp"
        >

            <ImageView
                    android:id="@+id/login_email_iv"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:src="@drawable/email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
                    android:layout_gravity="center_vertical"
            />

            <EditText
                    android:id="@+id/login_mail_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_circle_focus_on_background"
                    android:layout_marginStart="15dp"
                    android:hint="이메일을 입력해주세요"
                    android:layout_marginEnd="33dp"
                    android:paddingLeft="16dp"
                    android:textSize="13sp"
                    android:textColorHint="#c5c5c5"
            />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/login_passwd_ll"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
        >

            <ImageView
                    android:id="@+id/login_passwd_iv"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:src="@drawable/password"
                    android:layout_gravity="center_vertical"
            />

            <EditText
                    android:id="@+id/login_passwd_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_circle_focus_on_background"
                    android:layout_marginStart="15dp"
                    android:hint="비밀번호를 6자리 이상 입력해주세요."
                    android:layout_marginEnd="33dp"
                    android:paddingLeft="16dp"
                    android:textSize="13sp"
                    android:textColorHint="#c5c5c5"
            />

        </LinearLayout>


        <Button
                android:id="@+id/login_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="34dp"
                android:layout_marginHorizontal="41dp"
                android:background="@drawable/confirm_focus_on_circle_button"
                android:text="로그인"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
        />

        <TextView
                android:id="@+id/login_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 가입하기"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:onClick="@{() -> viewModel.callActivity()}"
        />

    </LinearLayout>

</layout>
